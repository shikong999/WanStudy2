<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">
    <!--课程条目-->
    <ImageView
        android:id="@+id/major_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/major_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/major_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="日语五十音"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/major_item_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音日语五十音"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/major_item_teacherName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/icon_course_user"
                android:gravity="center_vertical"
                android:text="刘苏曼"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/major_item_numOfClasses"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/icon_course_num"
                android:gravity="center_vertical"
                android:text="16讲"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/major_item_timePerPart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/icon_course_length"
                android:gravity="center_vertical"
                android:text="15分/将"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>