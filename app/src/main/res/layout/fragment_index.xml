<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.university.wanstudy.fragments.IndexFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.university.wanstudy.view.MyViewPager
                android:padding="10dp"
                android:id="@+id/index_viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/colorBlue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="热门课程"
                    android:textColor="@color/colorBlue"
                    android:textSize="20dp" />

            </LinearLayout>

            <com.university.wanstudy.view.MyGridView
                android:padding="10dp"
                android:id="@+id/index_gridView_hot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/colorBlue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="推荐课程"
                    android:textColor="@color/colorBlue"
                    android:textSize="20dp" />

            </LinearLayout>

            <com.university.wanstudy.view.MyGridView
                android:padding="10dp"
                android:id="@+id/index_gridView_recomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="2" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
